@model List<Car>
@{
    ViewData["Title"] = "Index";
}

<h1>Car´s Index</h1>

<a asp-controller="Cars" asp-action="Create">Create</a>

<div class="col-12">
    <div class="row">
        <div class="col-2">Id</div>
        <div class="col-3">Brand</div>
        <div class="col-3">Name</div>
        <div class="col-4">Options</div>
    </div>
    @foreach (var item in Model)
    {
        <div class="row" id="@("car" + item.Id)">
            <div class="col-2">@item.Id</div>
            <div class="col-3">@item.Brand</div>
            <div class="col-3">@item.Name</div>
            <div class="col-4">
                <button 
                        class="btn btn-danger" 
                        onclick="DeleteListItem('@("car" + item.Id)','@Url.Action("Delete","Cars",new { id = item.Id})')"
                        >Delete</button>
            </div>
        </div>
    }
</div>
