@model Car

<div class="row" id="@("car" + Model.Id)">
    <div class="col-8">
        <h3>Confirm deletion of @Model.Brand - @Model.Name</h3>
    </div>
    <div class="col-4">
        <button class="btn btn-danger"
                onclick="ConfirmDeleteListItem('@("car" + Model.Id)','@Url.Action("ConfirmDelete","Cars",new { id = Model.Id})', '@Model.Id')">
            Confirm
        </button>
    </div>
</div>